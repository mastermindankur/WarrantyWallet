
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Only allow authenticated users to access the warranties collection
    match /warranties/{warrantyId} {
      // A user can create a warranty if they are signed in and the userId on the
      // new document matches their own user ID.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // A user can read, update, or delete a warranty if they are signed in and
      // the userId on the existing document matches their own user ID.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
